<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <% if user_signed_in? %>
        <%= link_to 'ログアウト',
          destroy_user_session_path,
          class: 'logout_button',
          method: :delete
        %>
      <% end %>
    <div>
    <%= yield %>
  </body>
</html>
